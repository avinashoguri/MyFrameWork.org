<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="basePath">./logs</Property>
	</Properties>

	<Appenders>
		<RollingFile name="File" fileName="${basePath}/Logs.log"
			filePattern="${basePath}/Logs-%d{yyyy-MM-dd-HH-mm}.log">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<SizeBasedTriggeringPolicy size="500" />
		</RollingFile>

		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<SMTP name="Mail" subject="Test Logs" to="avinashoguris@gmail.com"
	from="autotest8686@gmail.com" smtpHost="smtp.gmail.com" smtpPort="465"
	bufferSize="50" smtpPassword="9652106733" ignoreExceptions="flase"
	smtpUsername="autotest8686" smtpProtocol="smtps">
    </SMTP>
	</Appenders>


	<Loggers>

		<Root level="trace">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
			<AppenderRef ref="Mail" />
		</Root>

	</Loggers>
</Configuration>